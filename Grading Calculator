from breezypythongui import EasyFrame

class GradingCalculator(EasyFrame):
    def __init__(self):
        EasyFrame.__init__(self, title = "Average Grade and GPA Calculator")
        self.addLabel(text = "Number # of Courses for Average Grade:", row = 0, column = 0)
        self.num_courses_average = self.addIntegerField(value = 1, row = 0, column = 1)

        self.addButton(text = "Calculate the Average Grades", row = 0, column = 2, command = self.calculate_average)

        self.averageGrade_label = self.addLabel(text = "", row = 1, column = 0, columnspan = 3)

        self.addLabel(text = "Number # of courses for GPA:", row = 2, column = 0)
